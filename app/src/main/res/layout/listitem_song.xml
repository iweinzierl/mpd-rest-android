<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MyTheme.Widget.ListItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/duration"
        style="@style/MyTheme.SongList.Duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:55" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/duration"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song"
            style="@style/MyTheme.SongList.Song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title 1" />

        <TextView
            android:id="@+id/artist"
            style="@style/MyTheme.SongList.Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hammerfall" />

        <TextView
            android:id="@+id/album"
            style="@style/MyTheme.SongList.Album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black and White" />

    </LinearLayout>

</RelativeLayout>